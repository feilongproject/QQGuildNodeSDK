{
    "compilerOptions": {
        "outDir": "./lib",
        "declaration": true,
        "module": "commonjs",
        "target": "esnext",
        "lib": ["esnext"],
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "test"]
}
